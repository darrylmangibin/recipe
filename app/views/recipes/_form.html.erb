<%= render 'shared/errors', obj: @recipe %>

<div class="row">
    <div class="col-12">
        <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="col-sm-10">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: "form-control", placeholder: "Name of Recipe" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <%= f.label :description %>
                    <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Enter steps to crete recipe" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <%= f.submit title, class: "btn btn-success" %>
                </div>
            </div>
        <% end %>
        <div class="col-md-4 col-md-offset-4">
            <%= link_to "[ Cancel request and return to recipes listing ]", recipes_path %>
        </div>
    </div>
</div>